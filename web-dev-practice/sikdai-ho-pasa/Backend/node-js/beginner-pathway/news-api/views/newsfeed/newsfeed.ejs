<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Feed</title>
    <link rel="stylesheet" href="/styles/newsfeed.css"> <!-- Link to the CSS file -->
    <style>
        /* Inline CSS for specific styles */
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
            /* Additional styles can be added here */
        }
        /* Other specific styles can be added here */
    </style>
</head>
<body>
    <%- include('../navbar/navbar.ejs') %> <!-- Corrected include syntax -->
    <p><%- success%></p>
    <main>
        <% news.forEach((singleNews) => { %>
            <article class="news-card">
                <div class="news-details">
                    <h2 class="news-title"><%- singleNews.title %></h2>
                    <p class="meta-title"><%- singleNews.subtitle %></p>
                    <p class="description"><%- singleNews.content %></p>
                    <img src="<%- singleNews.image %>" alt="image" height="200px" width="200px">
                    <% if (singleNews.user) { %>
                        <!-- User information is available -->
                        <p class="author">Author: <%- singleNews.user.username %></p>
                        <p class="author">Email: <%- singleNews.user.email %></p>
                    <% } else { %>
                        <!-- User information is not available -->
                        <p class="author">Author: Unknown</p>
                    <% } %>
                </div>
                <button class="edit-button"><a href="/single/<%- singleNews.id %>">Read More</a></button>
            </article>
        <% }) %>
    </main>
    
    <footer>
        <p>&copy; 2023 YourNewsFeed</p>
    </footer>
</body>
</html>
